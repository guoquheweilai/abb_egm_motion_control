{
    "version": "2.0.0",
    "tasks": [
        {   
            "type": "shell",
            "label": "g++ build and debug",
            "linux":{
                "command": "/usr/bin/g++",
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/a.out"
                ],
                "options": {
                    "cwd": "/usr/bin"
                },        
            },
            "windows":{
                "command": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin\\g++.exe",
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${workspaceFolder}\\a.exe"
                ],
                "options": {
                "cwd": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin"
                },
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "g++ build only",
            "linux":{
                "command": "/usr/bin/g++",
                "args": [
                    "-pipe",
                    "-O2",
                    "-std=c++14",
                    "${file}",
                    "-lm",
                    "-o",
                    "${workspaceFolder}/a.out",
                ],
                "options": {
                    "cwd": "/usr/bin"
                },
            },
            "windows":{
                "command": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin\\g++.exe",
                "args": [
                    "-pipe",
                    "-O2",
                    "-std=c++14",
                    "${file}",
                    "-I",
                    "${workspaceFolder}/include",
                    "-L",
                    "${workspaceFolder}/lib",
                    "-lm",
                    "-o",
                    "${workspaceFolder}\\a.exe"],
                "options": {
                  "cwd": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin"
                },
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}